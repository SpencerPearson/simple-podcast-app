@model SimplePodcastApp.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Contact Us";
}

<h2 class="text-center">@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-6 offset-3">
        <p>The below contact form is currently turned off and is presented for demonstration purposes only. For questions or comments please see my personal site, <a href="http://spencerpearson.net" target="_blank">spencerpearson.net</a>.</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
